<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="180dp"
              android:layout_height="fill_parent"
              android:backgroundTintMode="src_atop"
              android:background="@drawable/frame_retro">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/minimap_size"
            android:layout_height="@dimen/minimap_size"
            android:text="@string/minimap"
            android:id="@+id/btnMinimap"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_retro"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/sidebar_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/scrap_64"
                    android:id="@+id/scrap_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textScrap"
                    android:text="@string/res1_defVal"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/fuel_64"
                    android:id="@+id/fuel_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textFuel"
                    android:text="@string/res2_defVal"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp">

        <Button
            style="?android:attr/borderlessButtonStyle"

            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text="@string/turret1_button"
            android:id="@+id/btnT1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro"
            android:layout_margin="2dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text="@string/turret2_button"
            android:id="@+id/btnT2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_canv"
            android:layout_margin="2dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text="@string/turret3_button"
            android:id="@+id/btnT3"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/btn_retro_canv"
            android:layout_margin="2dp"
            android:layout_marginTop="3dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text="@string/turret4_button"
            android:id="@+id/btnT4"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/btn_retro_canv"
            android:layout_margin="2dp"
            android:layout_marginTop="3dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text="@string/upgrade1_button"
            android:id="@+id/btnU1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_upgrade_canv"
            android:layout_margin="2dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text="@string/upgrade2_button"
            android:id="@+id/btnU2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_upgrade_canv"
            android:layout_margin="2dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text="@string/upgrade3_button"
            android:id="@+id/btnU3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_upgrade_canv"
            android:layout_margin="2dp" />

    </GridLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/inventory_button"
        android:id="@+id/btnInventory"
        android:background="@drawable/btn_retro_canv"
        android:layout_margin="5dp" />
</LinearLayout>