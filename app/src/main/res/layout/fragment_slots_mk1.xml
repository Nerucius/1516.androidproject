<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/frame_retro">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/turret1_button"
                android:id="@+id/slotT1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="0.3"
                android:background="@drawable/btn_retro_canv_mk1"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/turret2_button"
                android:id="@+id/slotT2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="0.3"
                android:background="@drawable/btn_retro_canv_mk1"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/turret3_button"
                android:id="@+id/slotT3"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_rowWeight="0.3"
                android:background="@drawable/btn_retro_canv_mk1"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/turret4_button"
                android:id="@+id/slotT4"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/btn_retro_canv_mk1"
                android:layout_margin="2dp"
                android:layout_marginTop="3dp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/turret5_button"
                android:id="@+id/slotT5"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/btn_retro_canv_mk1"
                android:layout_margin="2dp"
                android:layout_marginTop="3dp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/turret6_button"
                android:id="@+id/slotT6"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/btn_retro_canv_mk1"
                android:layout_margin="2dp"
                android:layout_marginTop="3dp" />
        </GridLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/upgrade1_button"
                android:id="@+id/slotU1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="0.3"
                android:background="@drawable/btn_retro_upgrade_canv_mk1"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/upgrade2_button"
                android:id="@+id/slotU2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="0.3"
                android:background="@drawable/btn_retro_upgrade_canv_mk1"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/grid_btn_size"
                android:layout_height="@dimen/grid_btn_size"
                android:text="@string/upgrade3_button"
                android:id="@+id/slotU3"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_rowWeight="0.3"
                android:background="@drawable/btn_retro_upgrade_canv_mk1"
                android:layout_margin="2dp" />

        </GridLayout>

        <Button
            android:id="@+id/slotsBtn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_retro_mk1"
            android:text="@string/equipToSlot_button"/>
        <Button
            android:id="@+id/slotsBtn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_retro_mk1"
            android:text="@string/backToInventory_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@drawable/frame_retro"
            android:layout_weight="1">
            <TextView
                android:id="@+id/currentItemDesc"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@drawable/frame_retro"
            android:layout_weight="1">
            <TextView
                android:id="@+id/newItemDesc"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>